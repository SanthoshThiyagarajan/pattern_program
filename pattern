      package pattern;

import java.util.Scanner;

public class program1 {

	public static void main(String[] args) 
	{
		Scanner scan = new Scanner(System.in);
		System.out.print("Enter number to print the star: ");
		int n=scan.nextInt();
		//int count;
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n-i+1;j++)
			{
				System.out.print(i+" ");
			}
			System.out.println();
		}
	}

}
